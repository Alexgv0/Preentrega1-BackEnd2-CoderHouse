<div class="login-container">
    <h1>Iniciar Sesión</h1>
    <form id="loginForm">
        <div class="form-group">
            <label for="email">Correo Electrónico:</label>
            <input type="email" id="email" name="email" required />
        </div>
        <div class="form-group">
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" required />
        </div>
        <button type="submit">Iniciar Sesión</button>
    </form>

    <div class="social-login">
        <button id="googleLogin">Iniciar con Google</button>
        <button id="facebookLogin">Iniciar con Facebook</button>
    </div>

    <div class="register-link">
        <p>¿No tienes cuenta? <a href="#" id="showRegisterForm">Regístrate aquí</a></p>
    </div>

    <div id="message"></div>
    <!-- Div para mostrar mensajes -->
</div>

<div class="register-container" id="registerContainer" style="display: none;">
    <h1>Registrarse</h1>
    <form id="registerForm">
        <div class="form-group">
            <label for="regEmail">Correo Electrónico:</label>
            <input type="email" id="regEmail" name="email" required />
        </div>
        <div class="form-group">
            <label for="regPassword">Contraseña:</label>
            <input type="password" id="regPassword" name="password" required />
        </div>
        <button type="submit">Registrarse</button>
    </form>
    <div class="login-link">
        <p>¿Ya tienes cuenta? <a href="#" id="showLoginForm">Inicia sesión aquí</a></p>
    </div>
    <div id="registerMessage"></div>
</div>